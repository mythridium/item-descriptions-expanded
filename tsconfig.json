{
    "compilerOptions": {
        "outDir": "./build/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es6",
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "include": ["src/**/*", "node_modules/melvor-types"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
